buttonHolder.Position = UDim2.new(0, 10, 0, 50)
buttonHolder.BackgroundTransparency = 1
buttonHolder.Parent = mainFrame

local uiListLayout = Instance.new("UIListLayout")
uiListLayout.Parent = buttonHolder
uiListLayout.Padding = UDim.new(0, 8)

-- زر Anti-AFK
local antiAfkButton = Instance.new("TextButton")
antiAfkButton.Name = "AntiAFK"
antiAfkButton.Size = UDim2.new(1, 0, 0, 40)
antiAfkButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
antiAfkButton.Text = "تشغيل Anti-AFK"
antiAfkButton.TextColor3 = Color3.fromRGB(0, 255, 0)
antiAfkButton.Font = Enum.Font.GothamBold
antiAfkButton.TextSize = 14
antiAfkButton.Parent = buttonHolder

local antiAfkCorner = Instance.new("UICorner")
antiAfkCorner.CornerRadius = UDim.new(0, 10)
antiAfkCorner.Parent = antiAfkButton

-- وظيفة Anti-AFK
local antiAfkEnabled = false
antiAfkButton.MouseButton1Click:Connect(function()
    antiAfkEnabled = not antiAfkEnabled
    if antiAfkEnabled then
        antiAfkButton.Text = "إيقاف Anti-AFK"
        antiAfkButton.TextColor3 = Color3.fromRGB(255, 100, 100)
        -- تشغيل حماية AFK
        player.Idled:Connect(function()
            VirtualUser = game:GetService("VirtualUser")
            VirtualUser:CaptureController()
            VirtualUser:ClickButton2(Vector2.new())
        end)
    else
        antiAfkButton.Text = "تشغيل Anti-AFK"
        antiAfkButton.TextColor3 = Color3.fromRGB(0, 255, 0)
    end
end)

-- Timer للصمود
local timerLabel = Instance.new("TextLabel")
timerLabel.Name = "TimerLabel"
timerLabel.Size = UDim2.new(1, 0, 0, 30)
timerLabel.Position = UDim2.new(0, 0, 0, 270)
timerLabel.BackgroundTransparency = 1
timerLabel.Text = "الوقت: 00:00:00"
timerLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
timerLabel.Font = Enum.Font.GothamBold
timerLabel.TextSize = 14
timerLabel.Parent = mainFrame

local startTime = tick()
RunService.RenderStepped:Connect(function()
    local elapsed = tick() - startTime
    local hours = math.floor(elapsed / 3600)
    local mins = math.floor((elapsed % 3600) / 60)
    local secs = math.floor(elapsed % 60)
    timerLabel.Text = string.format("الوقت: %02d:%02d:%02d", hours, mins, secs)
end)

-- إحصائيات اللاعب (FPS & Ping)
local statsLabel = Instance.new("TextLabel")
statsLabel.Name = "StatsLabel"
statsLabel.Size = UDim2.new(1, 0, 0, 40)
statsLabel.Position = UDim2.new(0, 0, 0, 310)
statsLabel.BackgroundTransparency = 1
statsLabel.Text = "FPS: 0 | Ping: 0 ms"
statsLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
statsLabel.Font = Enum.Font.Gotham
statsLabel.TextSize = 14
statsLabel.Parent = mainFrame

-- تحديث الإحصائيات
local lastUpdate = tick()
local frameCount = 0
RunService.RenderStepped:Connect(function()
    frameCount = frameCount + 1
    if tick() - lastUpdate >= 1 then
        local fps = frameCount
        frameCount = 0
        lastUpdate = tick()
        
        local pingStat = Stats.Network.ServerStatsItem["Data Ping"]
        local ping = math.floor(pingStat:GetValue()) or 0
        
        statsLabel.Text = "FPS: " .. fps .. " | Ping: " .. ping .. " ms"
    end
end)

-- هنا لسه في مكان باقي المميزات (إزالة لاق، ثيمات، أزرار إضافية)
-- لحد دلوقتي احنا تقريباً عند 200 سطر
-- زر إزالة Lag (Memory Cleaner)
local lagButton = Instance.new("TextButton")
lagButton.Name = "LagCleaner"
lagButton.Size = UDim2.new(1, 0, 0, 40)
lagButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
lagButton.Text = "إزالة اللاج (تنظيف)"
lagButton.TextColor3 = Color3.fromRGB(0, 200, 255)
lagButton.Font = Enum.Font.GothamBold
lagButton.TextSize = 14
lagButton.Parent = buttonHolder

local lagCorner = Instance.new("UICorner")
lagCorner.CornerRadius = UDim.new(0, 10)
lagCorner.Parent = lagButton

lagButton.MouseButton1Click:Connect(function()
    -- تنظيف الذاكرة
    collectgarbage("collect")
    -- إزالة العناصر الغير ضرورية
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("Part") or v:IsA("MeshPart") or v:IsA("UnionOperation") then
            if v.Transparency > 0.9 then
                v:Destroy()
            end
        end
    end
    lagButton.Text = "✅ تم تنظيف الذاكرة"
    task.delay(3, function()
        lagButton.Text = "إزالة اللاج (تنظيف)"
    end)
end)

-- زر Boost FPS
local boostButton = Instance.new("TextButton")
boostButton.Name = "BoostFPS"
boostButton.Size = UDim2.new(1, 0, 0, 40)
boostButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
boostButton.Text = "Boost FPS"
boostButton.TextColor3 = Color3.fromRGB(255, 150, 0)
boostButton.Font = Enum.Font.GothamBold
boostButton.TextSize = 14
boostButton.Parent = buttonHolder

local boostCorner = Instance.new("UICorner")
boostCorner.CornerRadius = UDim.new(0, 10)
boostCorner.Parent = boostButton

boostButton.MouseButton1Click:Connect(function()
    settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
    game.Lighting.GlobalShadows = false
    game.Lighting.FogEnd = 1e10
    for _, effect in pairs(game.Lighting:GetChildren()) do
        if effect:IsA("PostEffect") then
            effect.Enabled = false
        end
    end
    boostButton.Text = "✅ FPS Boost مفعل"
    task.delay(3, function()
        boostButton.Text = "Boost FPS"
    end)
end)

-- زر إخفاء اللاعبين
local hidePlayersButton = Instance.new("TextButton")
hidePlayersButton.Name = "HidePlayers"
hidePlayersButton.Size = UDim2.new(1, 0, 0, 40)
hidePlayersButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
hidePlayersButton.Text = "إخفاء اللاعبين"
hidePlayersButton.TextColor3 = Color3.fromRGB(200, 200, 200)
hidePlayersButton.Font = Enum.Font.GothamBold
hidePlayersButton.TextSize = 14
hidePlayersButton.Parent = buttonHolder

local hideCorner = Instance.new("UICorner")
hideCorner.CornerRadius = UDim.new(0, 10)
hideCorner.Parent = hidePlayersButton

local playersHidden = false
hidePlayersButton.MouseButton1Click:Connect(function()
    playersHidden = not playersHidden
    for _, p in pairs(Players:GetPlayers()) do
        if p ~= player and p.Character then
            for _, part in pairs(p.Character:GetDescendants()) do
                if part:IsA("BasePart") or part:IsA("Decal") then
                    part.Transparency = playersHidden and 1 or 0
                end
            end
        end
    end
    hidePlayersButton.Text = playersHidden and "إظهار اللاعبين" or "إخفاء اللاعبين"
end)

-- قسم تغيير الثيمات
local themeLabel = Instance.new("TextLabel")
themeLabel.Name = "ThemeLabel"
themeLabel.Size = UDim2.new(1, 0, 0, 30)
themeLabel.Position = UDim2.new(0, 0, 0, 350)
themeLabel.BackgroundTransparency = 1
themeLabel.Text = "الثيم الحالي: Dark"
themeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
themeLabel.Font = Enum.Font.GothamBold
themeLabel.TextSize = 14
themeLabel.Parent = mainFrame

local currentTheme = "Dark"

-- زر تغيير الثيم
local themeButton = Instance.new("TextButton")
themeButton.Name = "ThemeButton"
themeButton.Size = UDim2.new(1, 0, 0, 40)
themeButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
themeButton.Text = "تغيير الثيم"
themeButton.TextColor3 = Color3.fromRGB(150, 150, 255)
themeButton.Font = Enum.Font.GothamBold
themeButton.TextSize = 14
themeButton.Parent = buttonHolder

local themeCorner = Instance.new("UICorner")
themeCorner.CornerRadius = UDim.new(0, 10)
themeCorner.Parent = themeButton

themeButton.MouseButton1Click:Connect(function()
    if currentTheme == "Dark" then
        mainFrame.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
        titleLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
        statsLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
        themeLabel.Text = "الثيم الحالي: Light"
        themeLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
        currentTheme = "Light"
    elseif currentTheme == "Light" then
        currentTheme = "Rainbow"
        themeLabel.Text = "الثيم الحالي: Rainbow"
        local hue = 0
        RunService.RenderStepped:Connect(function()
            if currentTheme == "Rainbow" then
                hue = (hue + 0.01) % 1
                local color = Color3.fromHSV(hue, 1, 1)
                mainFrame.BackgroundColor3 = color
                titleLabel.TextColor3 = color
            end
        end)
    else
        mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
        titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        statsLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
        themeLabel.Text = "الثيم الحالي: Dark"
        themeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        currentTheme = "Dark"
    end
end)
