CornerResize.CornerRadius = UDim.new(0, 8)
CornerResize.Parent = ResizeBtn

local bigSize = false
ResizeBtn.MouseButton1Click:Connect(function()
    if not bigSize then
        MainFrame:TweenSize(UDim2.new(0, 400, 0, 450), "Out", "Quad", 0.3, animEnabled)
        bigSize = true
    else
        MainFrame:TweenSize(UDim2.new(0, 320, 0, 380), "Out", "Quad", 0.3, animEnabled)
        bigSize = false
    end
end)

