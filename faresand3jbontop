ToggleAnim.TextSize = 16
ToggleAnim.AutoButtonColor = true

local CornerToggleAnim = Instance.new("UICorner")
CornerToggleAnim.CornerRadius = UDim.new(0, 8)
CornerToggleAnim.Parent = ToggleAnim

local animEnabled = true
ToggleAnim.MouseButton1Click:Connect(function()
    animEnabled = not animEnabled
    if animEnabled then
        ToggleAnim.Text = "إيقاف الأنيميشن: ❌"
        ToggleAnim.BackgroundColor3 = Color3.fromRGB(35, 35, 50)
    else
        ToggleAnim.Text = "تشغيل الأنيميشن: ✅"
        ToggleAnim.BackgroundColor3 = Color3.fromRGB(55, 55, 75)
    end
end)

