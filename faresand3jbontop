-- // Ù„Ù…Ø¹Ø© Ø¹Ù†Ø¯ Ø§Ù„Ù…Ø±ÙˆØ± Ø¹Ù„Ù‰ Ø£ÙŠ Ø²Ø±
local function AddShine(btn)
    local Shine = Instance.new("Frame")
    Shine.Name = "Shine"
    Shine.Parent = btn
    Shine.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    Shine.BackgroundTransparency = 1
    Shine.Size = UDim2.new(0, 0, 1, 0)
    Shine.ZIndex = btn.ZIndex + 1

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = Shine

    btn.MouseEnter:Connect(function()
        Shine.Size = UDim2.new(0, 0, 1, 0)
        Shine.BackgroundTransparency = 0.7
        TweenService:Create(Shine, TweenInfo.new(0.5), {Size = UDim2.new(1, 0, 1, 0), BackgroundTransparency = 1}):Play()
    end)
end

-- ØªØ·Ø¨ÙŠÙ‚ Ø§Ù„Ù„Ù…Ø¹Ø© Ø¹Ù„Ù‰ ÙƒÙ„ Ø§Ù„Ø£Ø²Ø±Ø§Ø±
for _, child in pairs(BtnContainer:GetChildren()) do
    if child:IsA("TextButton") then
        AddShine(child)
    end
end
