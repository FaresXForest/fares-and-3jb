-- // ØªØ£Ø«ÙŠØ±Ø§Øª Ø¥Ø¶Ø§ÙÙŠØ© Ù„Ù„Ù€ Buttons
local function AddBtnEffects(btn)
    btn.MouseButton1Down:Connect(function()
        btn:TweenSize(UDim2.new(1, 0, 0, 35), "Out", "Quad", 0.1, true)
    end)
    btn.MouseButton1Up:Connect(function()
        btn:TweenSize(UDim2.new(1, 0, 0, 40), "Out", "Quad", 0.1, true)
    end)
end

-- ØªØ·Ø¨ÙŠÙ‚ Ø§Ù„ØªØ£Ø«ÙŠØ± Ø¹Ù„Ù‰ ÙƒÙ„ Ø²Ø±
for _, child in pairs(BtnContainer:GetChildren()) do
    if child:IsA("TextButton") then
        AddBtnEffects(child)
    end
end

-- ÙƒÙ…Ø§Ù† Ø¹Ù„Ù‰ Ø£Ø²Ø±Ø§Ø± Ø§Ù„Ø¥Ø¹Ø¯Ø§Ø¯Ø§Øª
AddBtnEffects(ToggleAnim)
AddBtnEffects(ThemeBtn)
AddBtnEffects(ResizeBtn)
AddBtnEffects(CreditsBtn)
AddBtnEffects(BackBtn)
AddBtnEffects(BackFromCredits)
AddBtnEffects(SettingsBtn)
AddBtnEffects(CloseBtn)

-- // Ø®Ù„ÙÙŠØ© Ù…ØªØ­Ø±ÙƒØ© Ø¨Ø³ÙŠØ·Ø© (Gradient)
local Gradient = Instance.new("UIGradient")
Gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(60, 60, 90)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(25, 25, 35))
}
Gradient.Rotation = 90
Gradient.Parent = MainFrame

-- Ø­Ø±ÙƒØ© ØªØºÙŠÙŠØ± ØªØ¯Ø±ÙŠØ¬ÙŠ Ù„Ù„Ø£Ù„ÙˆØ§Ù†
spawn(function()
    while task.wait(0.1) do
        for i = 0, 360, 2 do
            Gradient.Rotation = i
            task.wait(0.02)
        end
