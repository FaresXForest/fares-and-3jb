-- // Animation عند ظهور الواجهة لأول مرة
MainFrame.Size = UDim2.new(0, 0, 0, 0)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
TweenService:Create(MainFrame, TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.Out),
    {Size = UDim2.new(0, 320, 0, 380), Position = UDim2.new(0.25, 0, 0.2, 0)}):Play()
    -- // خلفية متحركة خفيفة جوه الواجهة (Glow Effect)
local Glow = Instance.new("ImageLabel")
Glow.Name = "Glow"
Glow.Parent = MainFrame
Glow.BackgroundTransparency = 1
Glow.Position = UDim2.new(-0.2, 0, -0.2, 0)
Glow.Size = UDim2.new(1.4, 0, 1.4, 0)
Glow.ZIndex = -2
Glow.Image = "rbxassetid://5028857084"
Glow.ImageColor3 = Color3.fromRGB(80, 80, 120)
Glow.ImageTransparency = 0.8
Glow.ScaleType = Enum.ScaleType.Slice
Glow.SliceCenter = Rect.new(24, 24, 276, 276)

-- Animation للـ Glow
spawn(function()
    while task.wait(0.05) do
        for i = 0.8, 0.4, -0.02 do
            Glow.ImageTransparency = i
            task.wait(0.05)
        end
        for i = 0.4, 0.8, 0.02 do
            Glow.ImageTransparency = i
            task.wait(0.05)
        end
    end
end)

-- // لمعة عند المرور على أي زر
local function AddShine(btn)
    local Shine = Instance.new("Frame")
    Shine.Name = "Shine"
    Shine.Parent = btn
    Shine.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    Shine.BackgroundTransparency = 1
    Shine.Size = UDim2.new(0, 0, 1, 0)
    Shine.ZIndex = btn.ZIndex + 1

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = Shine

    btn.MouseEnter:Connect(function()
        Shine.Size = UDim2.new(0, 0, 1, 0)
        Shine.BackgroundTransparency = 0.7
        TweenService:Create(Shine, TweenInfo.new(0.5), {Size = UDim2.new(1, 0, 1, 0), BackgroundTransparency = 1}):Play()
    end)
end

-- تطبيق اللمعة على كل الأزرار
for _, child in pairs(BtnContainer:GetChildren()) do
    if child:IsA("TextButton") then
        AddShine(child)
    end
end
AddShine(SettingsBtn)
AddShine(CloseBtn)
AddShine(ToggleAnim)
AddShine(ThemeBtn)
AddShine(ResizeBtn)
AddShine(CreditsBtn)
AddShine(BackBtn)
AddShine(BackFromCredits)

-- // Scroll لو الأزرار زادت عن حجم الشاشة
local UIScroll = Instance.new("ScrollingFrame")
UIScroll.Name = "UIScroll"
UIScroll.Parent = BtnContainer
UIScroll.BackgroundTransparency = 1
UIScroll.Size = UDim2.new(1, 0, 1, 0)
UIScroll.CanvasSize = UDim2.new(0, 0, 2, 0)
UIScroll.ScrollBarThickness = 4
UIScroll.ScrollBarImageColor3 = Color3.fromRGB(100, 100, 150)

local UIListInside = Instance.new("UIListLayout")
UIListInside.Parent = UIScroll
UIListInside.SortOrder = Enum.SortOrder.LayoutOrder
UIListInside.Padding = UDim.new(0, 10)

-- مثال: إضافة أزرار كتيرة جوه Scroll
for i = 9, 20 do
    local Btn = Instance.new("TextButton")
    Btn.Name = "Btn" .. i
    Btn.Parent = UIScroll
    Btn.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
    Btn.Size = UDim2.new(1, -10, 0, 40)
    Btn.Font = Enum.Font.GothamBold
    Btn.Text = "زر تجريبي " .. i
    Btn.TextColor3 = Color3.fromRGB(200, 200, 255)
    Btn.TextSize = 18
    Btn.AutoButtonColor = true

    local CornerBtn = Instance.new("UICorner")
    CornerBtn.CornerRadius = UDim.new(0, 10)
    CornerBtn.Parent = Btn

    -- Hover
    Btn.MouseEnter:Connect(function()
        Btn.BackgroundColor3 = Color3.fromRGB(40, 40, 55)
    end)
    Btn.MouseLeave:Connect(function()
        Btn.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
    end)

    AddBtnEffects(Btn)
    AddShine(Btn)
end

-- تحديث الـ CanvasSize على حسب عدد الأزرار
UIScroll.CanvasSize = UDim2.new(0, 0, 0, #UIScroll:GetChildren() * 50)

-- // إضافة Shortcut (زر) في الكيبورد لو حد مشغل على PC
local UserInputService = game:GetService("UserInputService")
UserInputService.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    if input.KeyCode == Enum.KeyCode.RightShift then
        MainFrame.Visible = not MainFrame.Visible
        if MainFrame.Visible then
            ShowNotification("✅ الواجهة ظهرت")
        else
            ShowNotification("👻 الواجهة اختفت")
        end
    end
end)

