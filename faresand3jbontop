-- Auto Cleaner (تنظيف تلقائي كل 60 ثانية)
local autoCleanerEnabled = true
task.spawn(function()
    while task.wait(60) do
        if autoCleanerEnabled then
            collectgarbage("collect")
            for _, v in pairs(workspace:GetDescendants()) do
                if v:IsA("Part") or v:IsA("MeshPart") then
                    if v.Transparency > 0.95 then
                        v:Destroy()
                    end
                end
            end
            print("Auto Cleaner: تم التنظيف تلقائياً")
        end
    end
end)

-- زر تشغيل/إيقاف Auto Cleaner
local autoCleanerButton = Instance.new("TextButton")
autoCleanerButton.Name = "AutoCleanerToggle"
autoCleanerButton.Size = UDim2.new(1, 0, 0, 40)
autoCleanerButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
autoCleanerButton.Text = "إيقاف Auto Cleaner"
autoCleanerButton.TextColor3 = Color3.fromRGB(255, 255, 0)
autoCleanerButton.Font = Enum.Font.GothamBold
autoCleanerButton.TextSize = 14
autoCleanerButton.Parent = buttonHolder

local autoCleanerCorner = Instance.new("UICorner")
autoCleanerCorner.CornerRadius = UDim.new(0, 10)
autoCleanerCorner.Parent = autoCleanerButton

autoCleanerButton.MouseButton1Click:Connect(function()
    autoCleanerEnabled = not autoCleanerEnabled
    if autoCleanerEnabled then
        autoCleanerButton.Text = "إيقاف Auto Cleaner"
        autoCleanerButton.TextColor3 = Color3.fromRGB(255, 255, 0)
    else
        autoCleanerButton.Text = "تشغيل Auto Cleaner"
        autoCleanerButton.TextColor3 = Color3.fromRGB(0, 200, 255)
    end
end)

