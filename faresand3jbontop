-- // إضافة إشعارات صغيرة
local Notifications = Instance.new("Frame")
Notifications.Name = "Notifications"
Notifications.Parent = MainFrame
Notifications.BackgroundTransparency = 1
Notifications.Position = UDim2.new(0, 0, 0, -60)
Notifications.Size = UDim2.new(1, 0, 0, 50)

local function ShowNotification(msg)
    local Note = Instance.new("TextLabel")
    Note.Parent = Notifications
    Note.BackgroundColor3 = Color3.fromRGB(30, 30, 50)
    Note.Size = UDim2.new(0, 200, 0, 30)
    Note.Position = UDim2.new(0.5, -100, 0, 10)
    Note.Font = Enum.Font.Gotham
    Note.Text = msg
    Note.TextColor3 = Color3.fromRGB(220, 220, 255)
    Note.TextSize = 14
    Note.BackgroundTransparency = 0.2
    
    local CornerNote = Instance.new("UICorner")
    CornerNote.CornerRadius = UDim.new(0, 8)
    CornerNote.Parent = Note
    
    Note.TextTransparency = 1
    Note.BackgroundTransparency = 1
    
    -- Fade In
    TweenService:Create(Note, TweenInfo.new(0.3), {TextTransparency = 0, BackgroundTransparency = 0.2}):Play()
    
    -- بعد 2 ثانية يختفي
    task.delay(2, function()
        TweenService:Create(Note, TweenInfo.new(0.3), {TextTransparency = 1, BackgroundTransparency = 1}):Play()
        task.wait(0.3)
        Note:Destroy()
    end)
end

-- مثال: رسالة عند تشغيل السورس
ShowNotification("✅ تم تشغيل السورس بنجاح")

-- // حركة صغيرة عند فتح Settings
SettingsBtn.MouseButton1Click:Connect(function()
    ShowNotification("⚙️ فتحت الإعدادات")
end)

-- // حركة صغيرة عند الرجوع
