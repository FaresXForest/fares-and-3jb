local CornerTheme = Instance.new("UICorner")
CornerTheme.CornerRadius = UDim.new(0, 8)
CornerTheme.Parent = ThemeBtn

local darkTheme = true
ThemeBtn.MouseButton1Click:Connect(function()
    if darkTheme then
        MainFrame.BackgroundColor3 = Color3.fromRGB(245, 245, 245)
        Title.TextColor3 = Color3.fromRGB(40, 40, 60)
        ThemeBtn.Text = "ثيم: فاتح ☀"
        darkTheme = false
    else
        MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
        Title.TextColor3 = Color3.fromRGB(200, 200, 255)
        ThemeBtn.Text = "ثيم: داكن 🌙"
        darkTheme = true
    end
end)

